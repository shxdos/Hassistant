<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/listitem_choose_child_padding_margin"
    android:background="@color/color_front_2"
    android:orientation="horizontal"
    android:padding="@dimen/listitem_choose_child_padding_margin" >

    <TextView
        android:id="@+id/child_tag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/color_text_2"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/child_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/color_front_3"
        android:gravity="center_vertical"
        android:padding="@dimen/listitem_choose_child_descrption_padding"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/color_text_1" />

</LinearLayout>